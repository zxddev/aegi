# Baize Core 环境配置
# 复制此文件为 .env 并填写实际值
# cp .env.example .env

# ============ 运行环境 ============
BAIZE_CORE_ENV=dev
BAIZE_CORE_HOST=0.0.0.0
BAIZE_CORE_PORT=8600

# ============ LLM 配置（必须）============
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-5.2
OPENAI_API_KEY=sk-your-api-key
OPENAI_API_BASE=http://ai.baldcup.xyz/openai/v1/responses

# ============ PostgreSQL（必须）============
POSTGRES_DSN=postgresql+asyncpg://postgres:postgres@localhost:5432/baize_core

# ============ MinIO 对象存储（必须）============
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET=baize-artifacts

# ============ MCP Gateway（必须）============
MCP_BASE_URL=http://localhost:8604
MCP_API_KEY=dev-api-key
MCP_TLS_VERIFY=false

# ============ Neo4j 图数据库（必须）============
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# ============ Qdrant 向量数据库（必须）============
QDRANT_URL=http://localhost:6333
QDRANT_GRPC_URL=localhost:6334
QDRANT_API_KEY=

# ============ OpenSearch（可选）============
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=true
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_CHUNK_INDEX=chunks
OPENSEARCH_AUDIT_INDEX=audit_events

# ============ 策略配置（可选，有默认值）============
# BAIZE_CORE_ALLOWED_MODELS=gpt-4o,gpt-4o-mini
# BAIZE_CORE_ALLOWED_TOOLS=web_search,archive_url
# BAIZE_CORE_POLICY_DEFAULT_ALLOW=false
# BAIZE_CORE_TOOL_TIMEOUT_MS=30000
# BAIZE_CORE_TOOL_MAX_PAGES=20
# BAIZE_CORE_MAX_ITERATIONS=3
# BAIZE_CORE_MIN_SOURCES=3
# BAIZE_CORE_MAX_CONCURRENCY=5
# BAIZE_CORE_REQUIRE_ARCHIVE_FIRST=true
# BAIZE_CORE_REQUIRE_CITATIONS=true
# BAIZE_CORE_HITL_RISK_LEVELS=high
# BAIZE_CORE_TOOL_RISK_LEVELS=web_crawl:high,archive_url:high

# ============ 审计日志（可选）============
# BAIZE_CORE_AUDIT_LOG=output/baize_core_audit.jsonl
